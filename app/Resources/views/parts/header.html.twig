    </div>
    <div class="options">
        <span class="cart-container full-screen">
            {% if product is defined or (page is defined and page.type == 'editions') %}
            <a href="{{ path('order-' ~ app.request.locale) }}" class="cart">
                <span class="cartSpan">{{ 'menu.cart' | trans }}</span>
                <img src="/assets/img/cart.svg" alt="Panier" width="30px">
                <small class="cartCount-render"></small>
            </a>
            {% endif %}
        </span>
        <div class="languages">
            <ul class="available">
                {% if availableLocales is defined %}
                    {% for locale, url in availableLocales %}
                        {% if locale != app.request.locale %}
                            <li><a href={{ url }}>{{ locale }}</a></li>
                        {% endif %}
                    {% endfor %}
                {% else %}
                    {% set route = app.request.attributes.get('_route') %}
                    {% if route %}
                        {% set route_params = app.request.attributes.get('_route_params') %}
                        {% set params = route_params|merge(app.request.query.all) %}
                        {% for locale in locales %}
                            {% if locale != app.request.locale %}
                                <li><a href="{{ path(route, params|merge({ _locale: locale })) }}">{{ locale }}</a></li>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                {% endif %}
            </ul>
            <ul class="current">
                <li><a href=#>{{ currentLocale }}</a></li>
            </ul>
        </div>
        <ul class="zoom">
            <li class="minus">A -</li>
            <li class="plus">A +</li>
        </ul>
    </div>
    <div class="burger hamburger hamburger--minus">
        <div class="hamburger-box">
            <div class="hamnburger-inner"></div>
        </div>
    </div>
    <span class="cart-container menu-reduced">
        {% if product is defined or (page is defined and page.type == 'editions') %}
        <a href="{{ path('order-' ~ app.request.locale) }}" class="cart">
            <span class="cartSpan">{{ 'menu.cart' | trans }}</span>
            <img src="/assets/img/cart.svg" width="30px" alt="Panier">
            <small class="cartCount-render"></small>
        </a>
        {% endif %}
    </span>
</div>
<script type="text/template" class="cartCount-template">
    <% if (cartCount > 0) { %>
        <span class="counter"><%= cartCount %></span>
    <% } %>
</script>
